---
import type { TeamMember, AdvisoryMember } from '../content/siteData';

interface Props {
  people: (TeamMember | AdvisoryMember)[];
  showRole?: boolean;
}

const { people, showRole = true } = Astro.props;
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;

function isTeamMember(person: TeamMember | AdvisoryMember): person is TeamMember {
  return 'role' in person && 'linkedinUrl' in person;
}
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
  {people.map((person) => (
    <div class="person-card">
      <div class="mb-6">
        <div class="aspect-square rounded-lg overflow-hidden bg-charcoal-800 border-2 border-charcoal-700">
          <img 
            src={`${base}${person.imagePath}`} 
            alt={person.name}
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
      </div>
      <div>
        <div class="flex items-start justify-between mb-2">
          <div>
            <h3 class="text-2xl font-bold text-white mb-1">
              {person.name}
            </h3>
            {showRole && isTeamMember(person) && (
              <p class="text-mint-400 font-semibold text-sm uppercase tracking-wide">
                {person.role}
              </p>
            )}
          </div>
          {isTeamMember(person) && person.linkedinUrl && (
            <a 
              href={person.linkedinUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-mint-400 transition-colors"
              aria-label={`${person.name} on LinkedIn`}
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          )}
        </div>
        <p class="text-gray-400 leading-relaxed text-sm">
          {person.bio}
        </p>
      </div>
    </div>
  ))}
</div>

