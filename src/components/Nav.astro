---
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-charcoal-950/95 backdrop-blur-sm border-b border-charcoal-800">
  <div class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a href="#intro" class="flex items-center">
        <img src={`${base}assets/wordmark.png`} alt="Climate VC" class="h-8 md:h-10" />
      </a>
      
      <div class="hidden md:flex items-center space-x-8">
        <a href="#intro" class="nav-link">Home</a>
        <a href="#portfolio" class="nav-link">Portfolio</a>
        <a href="#team" class="nav-link">Team</a>
        <a href="#advisory" class="nav-link">Advisory</a>
        <a href="#press" class="nav-link">Press</a>
      </div>
      
      <!-- Mobile menu button -->
      <button 
        id="mobile-menu-button" 
        class="md:hidden text-gray-300 hover:text-mint-400 transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
    
    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden pt-4 pb-2">
      <div class="flex flex-col space-y-3">
        <a href="#intro" class="nav-link-mobile">Home</a>
        <a href="#portfolio" class="nav-link-mobile">Portfolio</a>
        <a href="#team" class="nav-link-mobile">Team</a>
        <a href="#advisory" class="nav-link-mobile">Advisory</a>
        <a href="#press" class="nav-link-mobile">Press</a>
      </div>
    </div>
  </div>
</nav>

<style>
  .nav-link {
    @apply text-gray-300 hover:text-mint-400 transition-colors font-medium text-sm uppercase tracking-wide;
  }
  
  .nav-link-mobile {
    @apply text-gray-300 hover:text-mint-400 transition-colors font-medium text-base uppercase tracking-wide py-2;
  }
</style>

<script>
  // Mobile menu toggle
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  
  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
  
  // Close mobile menu when clicking a link
  const mobileLinks = document.querySelectorAll('#mobile-menu a');
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      menu?.classList.add('hidden');
    });
  });
</script>

