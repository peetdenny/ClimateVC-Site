---
import type { PressItem } from '../content/siteData';

interface Props {
  items: PressItem[];
}

const { items } = Astro.props;
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
---

<div class="press-strip">
  <div class="grid grid-cols-2 md:grid-cols-4 gap-8 items-center">
    {items.map((item) => (
      <a 
        href={item.url}
        target="_blank"
        rel="noopener noreferrer"
        class="press-logo-link group"
      >
        <div class="flex items-center justify-center h-20 grayscale opacity-60 group-hover:grayscale-0 group-hover:opacity-100 transition-all duration-300">
          <img 
            src={`${base}${item.logoPath}`} 
            alt={item.outlet}
            class="max-w-full max-h-full object-contain"
            loading="lazy"
          />
        </div>
      </a>
    ))}
  </div>
</div>

<style>
  .press-strip {
    @apply max-w-5xl mx-auto;
  }
  
  .press-logo-link {
    @apply block;
  }
</style>

